<h1>Use History</h1>
<br>
<%= search_form_for @q do |f| %>
  <div class="form-row">
    <div class="col">
  <%= f.text_field :user_or_asset_cont, :placeholder => 'Employee or Asset name', :class => "form-control"  %>
    </div>
    <div class="col-auto">
      <%= f.submit %>
    </div>
  </div>
<% end %>
<br>
<table class="table">
    <tr class="header">
      <th> # </th>
      <th> Employee </th>
      <th> Asset Name </th>
      <th> Date of Use </th>
    </tr>
    <% @uses.each do |use| %>
    <tr>
      <td> <%= use.id %> </td>
      <td> <%= use.user %> </td>
      <td> <%= use.asset %> </td>
      <td> <%= use.created_at %> </td>
    </tr>
    <% end %>
  </table>
  <br>

  <%= link_to("Back", authenticated_root_path, :class => "btn btn-secondary")%>
