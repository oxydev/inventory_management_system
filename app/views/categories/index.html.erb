<h1>Categories</h1>
<br>
<table class="table">
  <tr class="thead-light">
    <th> # </th>
    <th>Category Name</th>
    <th>No of Asset</th>
    <th>Actions</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %> </td>
      <td><%= category.category %></td>
      <td><%= category.items.count%></td>
      <td>
        <%= link_to("Show", category_path(category)) %>
        <% if current_user.admin%>
          <%= link_to("Edit", edit_category_path(category)) %>
          <%= link_to("Delete", delete_category_path(category)) %>
        <%end%>
      </td>
    </tr>
  <% end %>
</table>
<br>
<%if !current_user.admin%>
  <%= link_to("Back", authenticated_root_path, :class => "btn btn-secondary")%>
<%else%>
  <div class= "row justify-content-between">
    <div class = "col-2">
    <%= link_to("Back", authenticated_root_path, :class => "btn btn-secondary")%>
    </div>
    <div class = "col-3">
    <%= link_to("Add Category", new_category_path, :class => "btn btn-primary")%> <br>
    </div>
  </div>
<%end%>


