<h1>Edit Category</h1>
<br>
<%= form_for(@category) do |f| %>
  <table style= "margin: auto;text-align:left;">
    <tr>
      <th>Name: </th>
      <td><%= f.text_field(:category) %></td>
    </tr>
    <tr>
      <th>Assets: &emsp;</th>
      <td>
      <%=f.collection_select(:item, Item.all, :id, :asset,{}, {:prompt => true, :multiple=>true }) %>
      </td>
    </tr>
  </table>
  <br>
  <div class= "row justify-content-center">
    <div class = "col-2">
      <%= f.submit("Edit") %>
    </div>
    <div class = "col-2">
      <%=link_to "Back", categories_path, :class=> "btn btn-secondary"%>
    </div>
  </div>
<% end %>
