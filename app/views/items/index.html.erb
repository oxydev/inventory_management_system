<h1>Index</h1>
<%= current_user.user_name %>

<%= search_form_for @q do |f| %>
  <%= f.text_field :asset_or_asset_code_or_date_of_purchase_cont, :placeholder => 'Name, Code or Purchase Date' %>
  <%= f.submit %>
<% end %>
<table>
    <tr class="header">

      <th> # </th>
      <th> Asset Name </th>
      <th> Date of Purchase </th>
      <th> Category </th>
      <th> Action </th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td> <%= item.id %> </td>
      <td> <%= item.asset %> </td>
      <td> <%= item.date_of_purchase %> </td>
      <td> <%= item.category.category %> </td>
      <td>
         <%= action_option(item)%>
      </td>
    </tr>
    <% end %>
  </table>
  <br>

  <%= add_purchase %> <br>

  <%= link_to("Back", authenticated_root_path)%>
