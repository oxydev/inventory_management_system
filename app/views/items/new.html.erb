<h1>Asset add</h1>

<%=link_to "Get back", items_path %>

<%= form_for(@item) do |f| %>
  <table>
    <tr>
      <th> Asset Name </th>
      <td> <%= f.text_field(:asset) %> </td>
    </tr>
    <tr>
      <th> Purchase Date </th>
      <td> <%= f.date_field(:date_of_purchase) %> </td>
    </tr>
    <tr>
      <th> Asset Code </th>
      <td> <%= f.text_field(:asset_code) %> </td>
    </tr>
    <tr>
    <th>Categories</th>
    <td>
      <%=f.collection_select(:category_id, Category.all, :id, :category, {prompt: "UnSelected"} ) %>
    </td>
  </tr>
  </table>

  <div class="form-buttons">
    <%= f.submit("Add") %>
  </div>
<% end %>

