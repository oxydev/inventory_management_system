<h1>Asset add</h1>
<%=link_to "Get back", assets_path %>
<%= form_for(@asset) do |f| %>
  <table>
    <tr>
      <th> Asset Name </th>
      <td> <%= f.text_field(:asset_name) %> </td>
    </tr>
    <tr>
      <th> Purchase Date </th>
      <td> <%= f.text_field(:date_of_purchase) %> </td>
    </tr>
    <tr>
      <th> Asset Code </th>
      <td> <%= f.text_field(:asset_code) %> </td>
    </tr>
    
  </table>

  <div class="form-buttons">
    <%= f.submit("Add") %>
  </div>
<% end %>
