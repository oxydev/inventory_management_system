<h2>User Profile</h2>
<br>
<table class="table" style="width:auto; margin:auto; text-align: left;">
  <tr>
    <td> User Name: </td>
    <td> <%= @user.user_name%></td>
  <tr>
  <tr>
    <td> Email: </td>
    <td> <%= @user.email%> </td>
  <tr>
  <tr>
    <td> Status: </td>
    <td> <%=@user.invitation_accepted_at ? 'Accepted' : 'Pending'%> </td>
  <tr>
</table>
<br>

<% if current_user.admin%>
  <%= link_to "Back", users_path, :class => "btn btn-secondary" %>
<%else%>
  <div class= "row justify-content-center">
    <div class = "col-2">
      <%= link_to "Back", authenticated_root_path, :class => "btn btn-secondary" %>
    </div>
    <div class = "col-2">
      <%= link_to("Edit", edit_user_path(current_user), :class => 'btn btn-primary' ) %>
    </div>
  </div>
<%end%>
